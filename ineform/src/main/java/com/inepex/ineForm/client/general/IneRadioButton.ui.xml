<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources"
		type="com.inepex.ineForm.client.general.IneRadioButton.Res" />
	<ui:image field="radioButton" resource="{resources.radioButton}" />

	<ui:style type="com.inepex.ineForm.client.general.IneRadioButton.MyStyle">
			@sprite .rbIconStyle_old {
				gwt-image: 'radioButton_old';
				background-position: -15px 0px;
				display: inline-block;
				float: left;
				width: 14px;
				height: 14px;
				padding: 0px;
				margin: 0px;
				cursor: pointer;
				position: relative;
				top: 5px;
				margin-right: 3px;
			}
			
			@sprite .rbIconStyle {
				gwt-image: 'radioButton';
				background-position: -16px 0px;
				display: inline-block;
				float: left;
				width: 15px;
				height: 15px;
				padding: 0px;
				margin: 0px;
				cursor: pointer;
				position: relative;
				top: 5px;
				margin-right: 3px;
			}
			
			.checked {
				background-position: 0px 0px;
			}
			
			.rb {
				float: left;
				padding-right: 15px;
			}
			
			.rb input {
				display: none;
			}
			
			.disabled {
				cursors: normal !important;
				opacity: 0.7; 
			}
			
		</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel ui:field="rbIcon"></g:FlowPanel>
		<g:RadioButton ui:field="rb" styleName="{style.rb}"></g:RadioButton>
	</g:HTMLPanel>
</ui:UiBinder> 
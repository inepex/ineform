<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>translatorapp</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>nocacheFilter</filter-name>
		<filter-class>com.inepex.ineFrame.server.NoCacheFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>nocacheFilter</filter-name>
		<url-pattern>*.nocache.js</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>com.inepex.translatorapp.server.AppServletConfig</listener-class>
	</listener>
	
	<mime-mapping>
        <extension>woff</extension>
        <mime-type>application/font-woff</mime-type>
    </mime-mapping>
	
	<session-config>
		<session-timeout>480</session-timeout>
	</session-config>
</web-app>